# .env.template - ALVIN Environment Variables Template
# Copy this file to .env and fill in your actual values

# =============================================================================
# Flask Configuration
# =============================================================================
FLASK_CONFIG=development
SECRET_KEY=your-super-secret-key-change-in-production
JWT_SECRET_KEY=your-jwt-secret-key-change-in-production
DEBUG=true

# =============================================================================
# Database Configuration
# =============================================================================
# For development (SQLite)
DATABASE_URL=sqlite:///alvin_dev.db

# For production (PostgreSQL)
# DATABASE_URL=postgresql://username:password@host:port/database_name

# =============================================================================
# Claude AI Configuration
# =============================================================================
# Get your API key from: https://console.anthropic.com/
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# AI Settings
AI_SIMULATION_MODE=true
DEFAULT_CLAUDE_MODEL=claude-3-5-sonnet-20241022
CLAUDE_MAX_REQUESTS_PER_MINUTE=100
CLAUDE_MAX_TOKENS_PER_REQUEST=4000

# =============================================================================
# Payment Configuration (Stripe)
# =============================================================================
# Get your keys from: https://dashboard.stripe.com/apikeys
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# Payment Settings
PAYMENT_SIMULATION_MODE=true

# =============================================================================
# Redis Configuration (Optional for development)
# =============================================================================
REDIS_URL=redis://localhost:6379/0

# =============================================================================
# Email Configuration (Optional)
# =============================================================================
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=true
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password

# =============================================================================
# File Upload Configuration
# =============================================================================
UPLOAD_FOLDER=uploads
MAX_CONTENT_LENGTH=16777216

# =============================================================================
# CORS Configuration
# =============================================================================
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# =============================================================================
# Logging Configuration
# =============================================================================
LOG_LEVEL=INFO
LOG_FILE=

# =============================================================================
# Frontend Environment Variables
# =============================================================================
VITE_API_URL=http://localhost:5000
VITE_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here
VITE_APP_VERSION=1.0.0

# =============================================================================
# Docker & Production Settings
# =============================================================================
# For Docker deployment
# DATABASE_URL=postgresql://alvin_user:alvin_password@postgres:5432/alvin
# REDIS_URL=redis://redis:6379/0
# CORS_ORIGINS=https://yourdomain.com,https://app.yourdomain.com

# =============================================================================
# Security Settings (Production only)
# =============================================================================
# SESSION_COOKIE_SECURE=true
# SESSION_COOKIE_HTTPONLY=true
# SESSION_COOKIE_SAMESITE=Lax
# PREFERRED_URL_SCHEME=https

# =============================================================================
# Development Helpers
# =============================================================================
# Set to true to enable additional development features
FLASK_DEBUG=true
TESTING=false

# =============================================================================
# NOTES:
# =============================================================================
# 1. Never commit the actual .env file to version control
# 2. For production, set AI_SIMULATION_MODE=false and provide real API keys
# 3. For production, set PAYMENT_SIMULATION_MODE=false for real payments
# 4. Generate secure random values for SECRET_KEY and JWT_SECRET_KEY
# 5. Use environment-specific database URLs for each deployment
# 6. Consider using a secret management service for production
